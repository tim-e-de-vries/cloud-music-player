// --- File: tsconfig.json ---
// TypeScript compiler options.

{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules"]
}